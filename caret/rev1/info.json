{
    "keyboard_name": "caret",
    "manufacturer": "caret",
    "url": "",
    "maintainer": "caret",
    "usb": {
        "vid": "0xFEED",
        "pid": "0xBEEF",
        "device_version": "1.0.0"
    },
    "matrix_pins": {
        "cols": ["GP28", "GP27", "GP26", "GP18", "GP20", "GP19", "GP10"],
        //"cols": ["GP10", "GP19", "GP20", "GP18", "GP26", "GP27", "GP28"], // RIGHT HAND FIRMWARE
        "rows": ["GP5", "GP6", "GP7", "GP8", "GP9"]
    },
    "diode_direction": "COL2ROW",
    "split": {
        "enabled": true,
        "soft_serial_pin": "GP29",
        "transport": {
            "protocol": "serial_usart",
        }
    },
    "processor": "RP2040",
    "bootloader": "rp2040",
    "keymap": "caret_dvorak",
    "layouts": {
        "LAYOUT":{
            "layout": [
                // row 1
                {"matrix": [0, 0], "x": 0, "y": 0}, // 1
                {"matrix": [0, 1], "x": 0, "y": 1}, // 2
                {"matrix": [0, 2], "x": 0, "y": 2}, // 3
                {"matrix": [0, 3], "x": 0, "y": 3}, // 4
                {"matrix": [0, 4], "x": 0, "y": 4}, // 5
                {"matrix": [0, 5], "x": 0, "y": 5}, // 6

                // row 2
                {"matrix": [1, 0], "x": 1, "y": 0}, // TAB
                {"matrix": [1, 1], "x": 1, "y": 1}, // '
                {"matrix": [1, 2], "x": 1, "y": 2}, // ,
                {"matrix": [1, 3], "x": 1, "y": 3}, // .
                {"matrix": [1, 4], "x": 1, "y": 4}, // p
                {"matrix": [1, 5], "x": 1, "y": 5}, // y

                {"matrix": [2, 0], "x": 2, "y": 0}, // ESC
                {"matrix": [2, 1], "x": 2, "y": 1}, // a
                {"matrix": [2, 2], "x": 2, "y": 2}, // o
                {"matrix": [2, 3], "x": 2, "y": 3}, // e
                {"matrix": [2, 4], "x": 2, "y": 4}, // u
                {"matrix": [2, 5], "x": 2, "y": 5}, // i
                
                {"matrix": [3, 0], "x": 3, "y": 0}, // LSHIFT
                {"matrix": [3, 1], "x": 3, "y": 1}, // ;
                {"matrix": [3, 2], "x": 3, "y": 2}, // q
                {"matrix": [3, 3], "x": 3, "y": 3}, // j
                {"matrix": [3, 4], "x": 3, "y": 4}, // k
                {"matrix": [3, 5], "x": 3, "y": 5}, // x
                
                {"matrix": [4, 0], "x": 4, "y": 0}, // LCTRL
                {"matrix": [4, 1], "x": 4, "y": 1}, // LGUI
                {"matrix": [4, 2], "x": 4, "y": 2}, // LALT
                {"matrix": [4, 3], "x": 4, "y": 3}, // MO
                {"matrix": [4, 4], "x": 4, "y": 4}, // MO

                // thumb left 5 is left thumb col
                // Thumb ClusterKC_GRV, KC_F5, KC_SPC, KC_BSPC, KC_HOME, KC_END
                {"matrix": [2, 6], "x": 2, "y": 6}, // `
                {"matrix": [1, 6], "x": 1, "y": 6}, // F5
                {"matrix": [0, 6], "x": 1, "y": 0}, // HOME
                {"matrix": [4, 5], "x": 4, "y": 5}, // SPACE
                {"matrix": [4, 6], "x": 4, "y": 6}, // BACKSPACE
                {"matrix": [3, 6], "x": 3, "y": 6}, // END
                
                // Thumb right
                {"matrix": [5, 1], "x": 5, "y": 1}, // 7
                {"matrix": [5, 2], "x": 5, "y": 2}, // 8
                {"matrix": [5, 3], "x": 5, "y": 3}, // 9
                {"matrix": [5, 4], "x": 5, "y": 4}, // 0
                {"matrix": [5, 5], "x": 5, "y": 5}, // [
                {"matrix": [5, 6], "x": 5, "y": 6}, // ]
                
                {"matrix": [6, 1], "x": 6, "y": 1}, // f 
                {"matrix": [6, 2], "x": 6, "y": 2}, // g
                {"matrix": [6, 3], "x": 6, "y": 3}, // c
                {"matrix": [6, 4], "x": 6, "y": 4}, // r
                {"matrix": [6, 5], "x": 6, "y": 5}, // l
                {"matrix": [6, 6], "x": 6, "y": 6}, // /

                {"matrix": [7, 1], "x": 7, "y": 1}, // d
                {"matrix": [7, 2], "x": 7, "y": 2}, // h
                {"matrix": [7, 3], "x": 7, "y": 3}, // t
                {"matrix": [7, 4], "x": 7, "y": 4}, // n
                {"matrix": [7, 5], "x": 7, "y": 5}, // s
                {"matrix": [7, 6], "x": 7, "y": 6}, // -
                
                {"matrix": [8, 1], "x": 8, "y": 1}, // b
                {"matrix": [8, 2], "x": 8, "y": 2}, // mbbmwvz\
                {"matrix": [8, 3], "x": 8, "y": 3}, // w
                {"matrix": [8, 4], "x": 8, "y": 4}, // v
                {"matrix": [8, 5], "x": 8, "y": 5}, // z
                {"matrix": [8, 6], "x": 8, "y": 6}, // \
                                                    // 
                {"matrix": [9, 2], "x": 9, "y": 2}, // left
                {"matrix": [9, 3], "x": 9, "y": 3}, // down
                {"matrix": [9, 4], "x": 9, "y": 4}, // up 
                {"matrix": [9, 5], "x": 9, "y": 5}, // right
                {"matrix": [9, 6], "x": 9, "y": 6}, // =
                
                {"matrix": [6, 0], "x": 6, "y": 0}, // del
                {"matrix": [7, 0], "x": 7, "y": 0}, // INSERT
                {"matrix": [8, 0], "x": 8, "y": 0}, // PG UP
                {"matrix": [5, 0], "x": 5, "y": 0}, // PG DOWN
                {"matrix": [9, 0], "x": 9, "y": 0}, // enter
                {"matrix": [9, 1], "x": 9, "y": 1}, // space
            ]
        }
    }
}
